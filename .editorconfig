# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, Vue files
[*.{ts,js,vue}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

# Package.json (often has different formatting preferences)
[package.json]
indent_style = space
indent_size = 2
